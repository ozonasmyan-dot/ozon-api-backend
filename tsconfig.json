{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/shared/types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ]
    }
  },
  "include": [
    "src",
    "src/shared/types"
  ]
}